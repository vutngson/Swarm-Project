<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:isScrollContainer="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">

                <fragment
                    android:id="@+id/record_address"
                    android:name="vn.edu.usth.swarmapplicationuiprototype3.FunctionRecord.RecordFragmentAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout="@layout/fragment_record_1">

                </fragment>

                <Button
                    android:id="@+id/button_downward1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_expand_more_black_36dp"
                    android:backgroundTint="@color/colorPrimary" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/layout1">

                <!-- this layout can be any height you want -->
                <fragment
                    android:id="@+id/record_type"
                    android:name="vn.edu.usth.swarmapplicationuiprototype3.FunctionRecord.RecordFragmentType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout="@layout/fragment_record_1">

                </fragment>

                <Button
                    android:id="@+id/button_upward1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_expand_less_black_36dp"
                    android:backgroundTint="@color/colorPrimary" />

                <Button
                    android:id="@+id/button_downward2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_expand_more_black_36dp"
                    android:backgroundTint="@color/colorPrimary" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/layout2">

                <fragment
                    android:id="@+id/record_comment"
                    android:name="vn.edu.usth.swarmapplicationuiprototype3.FunctionRecord.RecordFragmentComment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout="@layout/fragment_record_1">

                </fragment>


                <Button
                    android:id="@+id/button_upward2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_expand_less_black_36dp"
                    android:backgroundTint="@color/colorPrimary" />
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>
</LinearLayout>