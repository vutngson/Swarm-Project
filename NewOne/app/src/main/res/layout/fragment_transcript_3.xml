<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/script3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/survey_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Transcription of Comment"
        android:textColor="@color/secondary_text"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/unique_survey_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/survey_address"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Type here"
        android:inputType="textMultiLine"
        android:lines="4"
        android:padding="1dp"
        android:scrollbars="vertical"
        android:textSize="17dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_below="@id/unique_survey_comment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_seekbar"
        android:thumb="@drawable/thumb_seekbar" />

    <ImageButton
        android:id="@+id/button_record_fragment_play"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/button_record_fragment_pause"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:src="@drawable/ic_play_arrow_white_36dp" />

    <ImageButton
        android:id="@+id/button_record_fragment_pause"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/button_record_fragment_play"
        android:layout_alignStart="@+id/button_record_fragment_play"
        android:layout_below="@+id/seekBar"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:src="@drawable/ic_pause_white_36dp" />


    <ImageButton
        android:id="@+id/button_record_fragment_replay"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/button_record_fragment_play"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/button_record_fragment_play"
        android:layout_toStartOf="@+id/button_record_fragment_play"
        android:background="@drawable/rounded_button"
        android:src="@drawable/ic_replay_white_24dp" />

    <ImageButton
        android:id="@+id/button_record_fragment_stop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/button_record_fragment_play"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/button_record_fragment_play"
        android:layout_toRightOf="@+id/button_record_fragment_play"
        android:background="@drawable/rounded_button"
        android:src="@drawable/ic_stop_white_24dp" />


</RelativeLayout>